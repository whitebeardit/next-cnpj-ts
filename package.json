{
  "name": "next-cnpj",
  "version": "1.0.0",
  "description": "Node.js library for robust CNPJ validation with support for the new alphanumeric format according to NTC 2025.001",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cnpj",
    "validation",
    "brazil",
    "ntc-2025",
    "alphanumeric",
    "document",
    "typescript"
